@model Models.ViewModels.Clients_ViewModels.User_Registration_View
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My PMS Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Extra Added line on 15-05-2019-->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />

</head>

<body>
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top" >
            <div class="container-fluid">
               
                <div class="col-md-12">
                    <div class="col-md-2">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">PMS</a>

                        </div>
                    </div>
                    <div class="col-md-8">
                        <form class="navbar-form"  action="/action_page.php">
                            <div class="form-horizontal" style="display:flex; justify-content:center">
                                <input class="form-control"  type="text" placeholder="Search" />
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>

                        </form>
                    </div>
                    <div class="col-md-1">
                        <ul class="nav navbar-nav navbar-right ">
                            @if (Session["Login"] == null)
                            {
                                <a href="#">
                                    <span class="glyphicon glyphicon-log-in" style="color:red">                                         
                                        @Html.ActionLink(" LOGIN", "Login", "User", null, new { @style = "color:red; text-decoration:none ;" })
                                    </span>
                                </a>
                            }
                            else
                            {
                                string userName = Session["Login"].ToString();
                                string userEmail = Session["Email"].ToString();
                                string userMobile = Session["Mobile"].ToString();

                                @Html.ActionLink(userName, "", "")

                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#"></a></li>
                                        @Html.ActionLink(userEmail, "", "")

                                        <li><a href="#"></a></li>
                                        @Html.ActionLink(userMobile, "", "")

                                        <li><a href="#"></a></li>
                                        @Html.ActionLink("Log Out", "Logout", "User")
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>                   
                </div>                
            </div>
        </nav>
    </div>

    <div class="commonHeight" style="min-height:48px;">

    </div>    
            <div class="container" >

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                                       
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("PMS", "PMS", "Home")</li>
                        <li>@Html.ActionLink("Shoes", "Shoe", "Home")</li>
                        <li>@Html.ActionLink("Electronic Gadgets", "Electronic", "Home")</li>
                        <li>@Html.ActionLink("Sneakers", "Sneaker", "Home")</li>
                        <li>@Html.ActionLink("Home Gadgets", "HomeGadget", "Home")</li>
                        <li>@Html.ActionLink("Appliances", "Appliance", "Home")</li>
                        <li>@Html.ActionLink("Mobiles", "Mobile", "Home")</li>
                        <li>@Html.ActionLink("Toys & Baby", "TandB", "Home")</li>
                        <li>@Html.ActionLink("Stationaries", "Stationary", "Home")</li>
                        <li>@Html.ActionLink("Fruits and Vegetables", "FandV", "Home")</li>


                    </ul>
               </div> 
            </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My PMS Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

</body>
</html>
